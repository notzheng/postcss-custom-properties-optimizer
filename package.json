{
  "name": "postcss-custom-properties-optimizer",
  "version": "0.0.0-development",
  "description": "PostCSS plugin to optimize custom properties",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-custom-properties-optimizer"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "parcel build --no-source-maps",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest",
    "types:check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/notzheng/postcss-custom-properties-optimizer.git"
  },
  "author": "notzheng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/notzheng/postcss-custom-properties-optimizer/issues"
  },
  "homepage": "https://github.com/notzheng/postcss-custom-properties-optimizer#readme",
  "peerDependencies": {
    "postcss": "^8.4.21"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.3",
    "parcel": "^2.8.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "husky": "^8.0.0"
  },
  "files": [
    "lib/**/*"
  ]
}
