{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": false,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "outDir": "lib",
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}